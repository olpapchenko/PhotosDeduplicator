{
  "name": "Photos deduplicator",
  "version": "1.0",
  "description": "Enables to find google photos duplicates and remove them",
  "permissions": ["declarativeContent"],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Press to start Photo deduplicator",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/photo_16.png",
      "32": "img/photo_32.png",
      "48": "img/photo_48.png",
      "128": "img/photo_128.png"
    },
    "icons": {
      "16": "img/photo_16.png",
      "32": "img/photo_32.png",
      "48": "img/photo_48.png",
      "128": "img/photo_128.png"
    }
  },

  "manifest_version": 2
}
